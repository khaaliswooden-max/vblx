# ==============================================================================
# VBLX Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------

# Site URL (used for meta tags, sitemap, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Environment (development | staging | production)
NEXT_PUBLIC_ENV=development

# ------------------------------------------------------------------------------
# Analytics (Optional)
# ------------------------------------------------------------------------------

# Google Analytics 4
NEXT_PUBLIC_GA_ID=

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Plausible Analytics (privacy-focused alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# ------------------------------------------------------------------------------
# CRM Integration (Optional)
# ------------------------------------------------------------------------------

# Webhook URL for form submissions
CRM_WEBHOOK_URL=

# API Key for CRM authentication
CRM_API_KEY=

# BD Command Center sync endpoint
BD_COMMAND_CENTER_URL=

# ------------------------------------------------------------------------------
# Email Service (Optional)
# ------------------------------------------------------------------------------

# SMTP or Email Service Provider
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@visionblox.com

# Alternative: SendGrid
SENDGRID_API_KEY=

# Alternative: Resend
RESEND_API_KEY=

# ------------------------------------------------------------------------------
# Content Management (Optional - for Phase 5)
# ------------------------------------------------------------------------------

# Sanity CMS
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# Alternative: Contentful
CONTENTFUL_SPACE_ID=
CONTENTFUL_ACCESS_TOKEN=
CONTENTFUL_PREVIEW_TOKEN=

# ------------------------------------------------------------------------------
# Authentication (Future)
# ------------------------------------------------------------------------------

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# ------------------------------------------------------------------------------
# Feature Flags (Optional)
# ------------------------------------------------------------------------------

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=false
NEXT_PUBLIC_ENABLE_FEDERAL_FORM=true
NEXT_PUBLIC_ENABLE_COMMERCIAL_FORM=true

# ------------------------------------------------------------------------------
# Rate Limiting (Optional)
# ------------------------------------------------------------------------------

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ------------------------------------------------------------------------------
# Error Tracking (Optional)
# ------------------------------------------------------------------------------

# Sentry
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ------------------------------------------------------------------------------
# API Keys (Optional)
# ------------------------------------------------------------------------------

# SAM.gov API (for AUREON integration)
SAM_GOV_API_KEY=

# Google Maps (for location pages)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# reCAPTCHA (for form protection)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# ------------------------------------------------------------------------------
# Development Tools
# ------------------------------------------------------------------------------

# Enable debug logging
DEBUG=false

# Analyze bundle size (set to true to generate report)
ANALYZE=false

# ==============================================================================
# Notes
# ==============================================================================
#
# 1. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
#    - Only use for non-sensitive values
#    - API keys should NOT have this prefix
#
# 2. Server-only variables (without NEXT_PUBLIC_) are only available in:
#    - API routes
#    - getServerSideProps
#    - Server Components
#
# 3. For production deployment on Vercel:
#    - Add these in Vercel Dashboard → Settings → Environment Variables
#    - Use different values for Preview vs Production
#
# 4. For local development:
#    - Copy this file to .env.local
#    - Fill in development values
#    - .env.local is git-ignored
#
# ==============================================================================
